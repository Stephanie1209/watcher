$(".open").click(function() {
  $(".issues_section").html("<%= escape_javascript(render 'issues_section', pull_requests: @pull_requests.where(status: "open")) %>")
});

$(".closed").click(function() {
  $(".issues_section").html("<%= escape_javascript(render 'issues_section', pull_requests: @pull_requests.where(status: "closed")) %>")
});

$(".all").click(function() {
  $(".issues_section").html("<%= escape_javascript(render 'issues_section', pull_requests: @pull_requests) %>")
});
