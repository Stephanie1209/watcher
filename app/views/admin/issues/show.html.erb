<div class="container">
	<div class= "info-container">
		<div class= "container-header">
			<h1 class= "title-admin"><%= @issue.github_id %></h1>
			<%= link_to image_tag("refresh-icon.png"), admin_repository_issue_path(@repository.name, @issue.id), class: "refresh-icon pull-right", method: :put %>
		</div>
		<p><strong>Title: </strong><%= @issue.title %></p>
		<p><strong>Account: </strong> <%= @issue.github_account %></p>
		<p><strong>Description: </strong> <%= @issue.description.truncate(100) %></p>
		<p><strong>Assignee: </strong> <%= @issue.assignee %></p>
		<p><strong>Created at: </strong> <%= @issue.started_at %></p>
		<p><strong>Labels: </strong> <%= @issue.labels %></p>
		<p><strong>Status: </strong> <%= @issue.status %></p>
		<p><strong>GitHub Number: </strong> <%= @issue.github_number %></p>
	</div>
</div>