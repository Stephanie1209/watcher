<%= form_for([:admin, @user])do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </div>

  <% if @user.new_record? %>
    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password , autocomplete: "off"%>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off"%>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>


