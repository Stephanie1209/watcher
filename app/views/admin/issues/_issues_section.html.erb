<% issues.each do |issue| %>
  <div class="row">
    <ul class="col-1 list-admin"><%= link_to "#{issue.github_id}", admin_repository_issue_path(@repository.name, issue) %></ul>
    <ul class="col-3 list-admin"><%= issue.title.truncate(30) %></ul>
    <ul class="col-2 list-admin"><%= issue.github_account %></ul>
    <% if issue.assignee %>
        <ul class="col-2 list-admin"><%= issue.assignee %></ul>
      <% else %>
        <ul class="col-2 list-admin">null</ul>
      <% end %>
    <ul class="col-2 list-admin"><%= issue.started_at.truncate(20) %></ul>
    <% if issue.labels %>
        <ul class="col-1 list-admin"><%= issue.labels.truncate(10) %></ul>
      <% else %>
         <ul class="col-1 list-admin">null</ul>
      <% end %>
    <ul class="col-1 list-admin"><%= issue.status %></ul>
  </div>
<% end %>
