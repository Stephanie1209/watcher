<div class="container">
  <h1 class="title-admin-table">Sign up</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="settings">
      <%= image_tag("user-icon.png", class: "info-icon pull-left") %>
      <%= f.label :name %>
      <%= f.text_field :name%>
    </div>

    <div class="settings">
      <%= image_tag("email-icon.png", class: "info-icon pull-left") %>
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="settings box-size">
      <%= image_tag("password-icon.png", class: "info-icon pull-left") %>
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div class="settings box-size-second">
      <%= image_tag("password-icon.png", class: "info-icon pull-left") %>
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="actions">
      <button class="table-tabs-admin pull-right">Sign up</button>
    </div>
  <% end %>

  <div class="login-button">
    <%= render "devise/shared/links" %>
  </div>
</div>
