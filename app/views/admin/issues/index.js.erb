$(".open").click(function() {
  $(".issues_section").html("<%= escape_javascript(render 'issues_section', issues: @issues.where(status: "open")) %>")
});

$(".closed").click(function() {
  $(".issues_section").html("<%= escape_javascript(render 'issues_section', issues: @issues.where(status: "closed")) %>")
});

$(".all").click(function() {
  $(".issues_section").html("<%= escape_javascript(render 'issues_section', issues: @issues) %>")
});


