<%= form_for([:admin, @user])do |f| %>
  <div class="settings">
    <%= image_tag("user-icon.png", class: "info-icon pull-left") %>
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="settings">
    <%= image_tag("email-icon.png", class: "info-icon pull-left") %>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <% if @user.new_record? %>
    <div class="settings">
      <%= image_tag("password-icon.png", class: "info-icon pull-left") %>
      <%= f.label :password %>
      <%= f.password_field :password , autocomplete: "off"%>
    </div>

    <div class="settings">
      <%= image_tag("password-icon.png", class: "info-icon pull-left") %>
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "off"%>
    </div>
  <% end %>

  <div class="actions">
    <button class="table-tabs-admin pull-right">Submit</button>
  </div>
<% end %>


